<head>
    <title>Todos List</title>
</head>
<body>
    <main class="TodoPageMain">
        <h1 class="TodoTitle">My To-Do List</h1>
        <section>
            <div class="AddNewTodo">
                <%= form_with(url: "/todos", method: "post") do %> 
                    <input class="InputText" type="text" name="todo_text_input" placeholder="What's new?">
                    <input class="InputDate" type="date" name="due_date_input">
                    <button class="AddButton" type="submit">Add</button>
                <% end %>
            </div>
        </section>

        <%= render partial: "todo-section", locals: {
            section_title: "Overdue",
            todos: @todos.overdue,
            date_display: true
        } %>
        <%= render partial: "todo-section", locals: {
            section_title: "Due Today",
            todos: @todos.duetoday,
            date_display: false
        } %>
        <%= render partial: "todo-section", locals: {
            section_title: "Due Later",
            todos: @todos.duelater,
            date_display: true
        } %>
        
    </main>
</body>